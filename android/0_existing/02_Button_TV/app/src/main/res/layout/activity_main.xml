<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

   <Button android:id="@+id/updateButton"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Take text" />

    <!-- This `TextView` presents text as default (attribute android:text),
        in case no text is presented android would show the text defined in
        the `android:hint` attribute. -->
    <TextView android:id="@+id/presentedTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Empty"
        android:text="This is going to be updated"/>

    <EditText android:id="@+id/userInputEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Please enter text"/>

</LinearLayout>