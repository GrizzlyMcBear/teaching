<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button android:id="@+id/openSpinnerDialogButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show spinner dialog"
        android:textAllCaps="false"/>

    <Button android:id="@+id/openProgressDialogButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Show progress dialog"/>

    <TextView android:id="@+id/statusTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="30sp"
        android:hint="Calculating status..."/>

</LinearLayout>